{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",

  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**/*", "package.json", "biome.json", "tsconfig.json"]
  },

  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "indentStyle": "space"
  },

  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "arrowParentheses": "asNeeded"
    }
  },

  "assist": {
    "actions": { "source": { "organizeImports": "off" } }
  },

  "linter": {
    "enabled": true,
    "domains": { "react": "recommended" },

    "rules": {
      "recommended": true,

      "a11y": {
        "useAltText": "off",
        "noAutofocus": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off",
        "useSemanticElements": "off",
        "useFocusableInteractive": "off"
      },

      "correctness": {
        "useUniqueElementIds": "off",
        "useExhaustiveDependencies": {
          "level": "error",
          "options": {
            "hooks": [
              {
                "name": "useDesktopEmbed",
                "stableResult": true
              },
              {
                "name": "useTheme",
                "stableResult": ["setTheme"]
              },
              {
                "name": "useMap",
                "stableResult": ["cacheSet", "cacheGet", "cacheHas"]
              },
              {
                "name": "useChat",
                "stableResult": ["stop", "setMessages", "sendMessage"]
              },
              {
                "name": "useRoute",
                "stableResult": ["match"]
              },
              {
                "name": "useLocation",
                "stableResult": ["navigate"]
              },
              {
                "name": "useActionItemsCache",
                "stableResult": ["cacheSet", "cacheGet", "cacheHas"]
              }
            ]
          }
        }
      },

      "suspicious": { "noUnknownAtRules": "off" },
      "nursery": { "noFloatingPromises": "error" }
    }
  }
}
