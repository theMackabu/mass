{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**/*",
      "package.json",
      "biome.json",
      "tsconfig.json",
      "postcss.config.mjs",
      "next.config.ts"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "indentStyle": "space"
  },

  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double",
      "trailingCommas": "none",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "arrowParentheses": "asNeeded"
    }
  },

  "assist": {
    "actions": { "source": { "organizeImports": "off" } }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "a11y": {
        "noAutofocus": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off",
        "useSemanticElements": "off",
        "useFocusableInteractive": "off"
      },

      "style": { "noUselessElse": "off" },
      "nursery": { "noFloatingPromises": "error" }
    }
  }
}
